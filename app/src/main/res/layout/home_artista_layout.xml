<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeArtista_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/textNomeUsuHomeArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="VÃ­tor Messias"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imagemPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textNomeUsuHomeArtista"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="270sp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/vitor" />

        <TextView
            android:id="@+id/textNomeBiografiaHomeArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textNomeUsuHomeArtista"
            android:layout_marginLeft="15dp"
            android:text="visual harvest"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textNomeLinkHomeArtista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNomeBiografiaHomeArtista"
            android:layout_marginLeft="15dp"
            android:text="proto-escrita.tumblr.com/"
            android:textColor="#0056EA" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNomeNumeroHomeArtista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1,540 Followers"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textNomeNumeroDoisHomeArtista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textNomeNumeroHomeArtista"
                android:layout_marginStart="120sp"
                android:layout_marginTop="10dp"
                android:text="1,540 Following"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnFollow"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/botao_follow_message"
                    android:hint="Follow"
                    android:textColorHint="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold|normal" />

                <Button
                    android:id="@+id/btnMessage"
                    style="?android:attr/button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="100sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/botao_follow_message"
                    android:hint="Message"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/viewPagerTab"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7F7F8"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="true"
            app:stl_defaultTabTextColor="#000000"
            app:stl_defaultTabTextHorizontalPadding="16dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_defaultTabTextSize="14sp"
            app:stl_distributeEvenly="true"
            app:stl_dividerColor="#FFFFFF"
            app:stl_dividerThickness="1dp"
            app:stl_drawDecorationAfterTab="false"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="#2196F3"
            app:stl_indicatorCornerRadius="2dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="4dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="false"
            app:stl_overlineColor="#2196F3"
            app:stl_overlineThickness="0dp"
            app:stl_titleOffset="24dp"
            app:stl_underlineColor="#B3B3B3"
            app:stl_underlineThickness="1dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="314dp"
            android:layout_below="@id/viewPagerTab" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/idframeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/idBottomNavBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="#fff"
            app:menu="@menu/menu" />

    </FrameLayout>
</LinearLayout>