<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plano_de_fundo_app"
    tools:context=".TelaInscricaoArtista_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:onClick="abrirJanelaPublico"
                android:id="@+id/btnPublico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/borda_botao_sem_cor"
                android:hint="@string/publico"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/borda_botao_cor"
                android:hint="@string/artista"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_marginTop="1sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:text="@string/nomeUsuario"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtCadUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/borda_sem_cor"
                android:hint="@string/digiteNome"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="8dp"
                android:text="@string/nomeLogin"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtCadLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/borda_sem_cor"
                android:hint="@string/digiteLogin"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="8dp"
                android:text="@string/nomeEmail"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtCadEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/borda_sem_cor"
                android:hint="@string/digiteEmail"
                android:inputType="textEmailAddress"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="8sp"
                android:text="@string/nomeSenha"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtCadSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/borda_sem_cor"
                android:hint="@string/digiteSenha"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtConfigSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="8dp"
                android:text="@string/nomeSenhaConfirmar"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtCadConfigSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/borda_sem_cor"
                android:hint="@string/digiteSenhaNovam"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <Button
                android:onClick="voltarJanelaArtista"
                android:id="@+id/btnCancelar"
                style="?android:attr/button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borda_botao_sem_cor"
                android:hint="@string/cancelar"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnAvancar"
                style="?android:attr/button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:background="@drawable/borda_com_cor"
                android:hint="@string/avancar"
                android:onClick="abrirJanela"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>